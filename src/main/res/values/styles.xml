<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/Blue</item>
        <item name="colorAccent">@color/lightPink</item>
    </style>

    <style name="title">
        <item name="android:fontFamily">@font/yeseva_one</item>
        <item name="android:textSize">64sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tagline">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.045</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn">
        <item name="android:width">277dp</item>
        <item name="android:height">56dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="back_btn">
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
        <item name="android:background">@drawable/back_button</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="phone_no">
        <item name="android:fontFamily">@font/yeseva_one</item>
        <item name="android:textSize">27sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/Blue</item>
        <item name="android:gravity">center</item>
        <item name="lineHeight">38sp</item>
    </style>

    <style name="field">
        <item name="android:textColorHighlight">@color/Blue</item>
        <item name="android:colorControlNormal">@color/Blue</item>
        <item name="android:backgroundTint">@color/Blue</item>
    </style>

    <style name="desc">
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--home toolbar-->
    <style name="toolbar_title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/yeseva_one</item>
        <item name="android:textColor">@color/Blue</item>
    </style>
    <!--home-->
    <style name="call_help">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/yeseva_one</item>
        <item name="android:textColor">@color/Blue</item>
    </style>
</resources>
